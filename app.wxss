.iconfont {
	font-family:"iconfont" !important;
	font-style:normal;
	-webkit-font-smoothing: antialiased;
	-webkit-text-stroke-width: 0.2px;
	-moz-osx-font-smoothing: grayscale;
}
text {
  	font-family:'Poppins','PingFang SC',"Helvetica Neue",Helvetica,Arial,"Microsoft Yahei","Hiragino Sans GB","Heiti SC","WenQuanYi Micro Hei",sans-serif;
  	color: #666;
}
button{
  outline:0;
}
ul,li,ol {
  	list-style: none;
}
a {
  	color: #666;
  	text-decoration: none;
  	transition: all .25s ease-out;
}
a:hover {
  	color: #39c5bb;
}
p{
  	margin-bottom: 10px;
}
.clearfix:after{
	content: '';
	display: block;
	clear: both;
	height: 0;
}
.col-6{
  width: 50%;
  float: left;
}
button:after{
  display: none;
}
.btn{
  position: relative;
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-bottom: 0;
  line-height: 1.42857143;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: 400;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  -ms-touch-action: manipulation;
  touch-action: manipulation;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  background-color: #fff;
  color: #999;
  transition: all .25s ease-out;
}
.btn:hover{
  color: #fff !important;
  background: #39c5bb !important;  
}
.text-center{
  text-align:center;
}
.navigator-hover{
  color: #fff !important;
  background: #39c5bb !important;
}

.navigator-hover .post-title, .navigator-hover .post-time{
  color: #fff !important;
}

.post-box{
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ddd;
}
.post-box .post-title{
  font-size: 32rpx;
  display: block;
  color: #666;
  text-overflow: ellipsis;
  overflow:hidden;
  white-space:nowrap;
    margin-bottom: 15rpx;
}
.post-box .post-info{
  line-height: 1;
  vertical-align: middle;
}
.post-box .category-tag{
  font-size: 22rpx;
  padding: 8rpx;
  background: #39c5bb;
  color: #fff;
  border-radius: 4rpx;
    vertical-align: middle;
    display: inline-block;
    float: left;
}
.post-box .post-time{
  font-size: 22rpx;
  color: #999;
    float: right;
    vertical-align: middle;
    padding: 8rpx;
    display: inline-block;
}

.more-btn{
  padding: 45rpx 0;
  text-align: center;
}
.more-btn .last-warning{
  font-size: 24rpx;
  color: #999;
}

.padding-15{
  padding: 0px 15rpx;
  box-sizing: border-box;
}

@import "/wxParse/wxParse.wxss";


.loading-box{
  width:100%;
  height: 100%;
  text-align: center;
}
.loading-box image{
  width: 100px;
  height: 106px;
  margin-top: 50%;
}
.loading-box text{
  display: block;
  font-size: 28rpx;
}

.form-section{
  margin-bottom: 30rpx;
}
.form-section input, .form-section textarea{
  border: 1px solid #ddd;
  padding: 10rpx 15rpx;
  height: auto;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}
.form-section textarea{
  min-height: 125px;
}
.error-text{
  font-size: 28rpx;
  color: #f4516c;
  text-align: center;
  margin-bottom:30rpx;
}

.go-top {
  position: fixed;
  right: 15px;
  bottom: 15rpx;
  display: block;
  width: 30px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 12px;
  border-radius: 30px;
  border: 1px solid #ddd;
  -webkit-transition: all .35s ease-in-out;
  transition: all .35s ease-in-out;
  background: #fff;
}
.icon-top:before{
  content: "\e600";
}