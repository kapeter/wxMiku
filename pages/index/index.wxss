/**index.wxss**/
.swiper-container{
	width:100%;
	height:420rpx;
}
.slide-image{
	width:100%;
}
.slide-content{
	width: 100%;
	height: 42%;
	position: absolute;
	left: 0;
	bottom: 0;
	background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.75));
	padding: 75rpx 30rpx;
	padding-bottom: 0;
	box-sizing: border-box;
}
.slide-content text{
	display: block;
	color: #fff;
	font-size: 32rpx;
}

.box-header{
	padding: 60rpx 0;
	text-align: center;
}
.box-header .main{
  	font-size: 32rpx;
  	font-weight: normal;
  	color: #39c5bb;
  	letter-spacing: 6rpx;
}
.box-header .sub{
	display: block;
	font-size: 20rpx;
  	color: #666;
  	text-transform: uppercase;
  	letter-spacing: 6rpx;
}
.post-box{
	padding: 30rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #ddd;
}
.post-box .post-title{
	font-size: 32rpx;
	display: block;
	color: #666;
	text-overflow: ellipsis;
	overflow:hidden;
	white-space:nowrap;
  	margin-bottom: 15rpx;
}
.post-box .post-info{
  line-height: 1;
  vertical-align: middle;
}
.post-box .category-tag{
	font-size: 22rpx;
	padding: 8rpx;
	background: #39c5bb;
	color: #fff;
	border-radius: 4rpx;
  	vertical-align: middle;
  	display: inline-block;
  	float: left;
}
.post-box .post-time{
	font-size: 22rpx;
	color: #999;
  	float: right;
  	vertical-align: middle;
  	padding: 8rpx;
  	display: inline-block;
}